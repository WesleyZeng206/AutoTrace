# PostgreSQL Configuration 
POSTGRES_DB=autotrace
POSTGRES_USER=autotrace_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# DATABASE_URL=postgresql://autotrace_user:CHANGE_ME@your-db-host:5432/autotrace?sslmode=require

# Server 
PORT=4000
NODE_ENV=production

# CORS
ALLOWED_ORIGINS=https://dashboard.yourdomain.com,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=500       
TELEMETRY_RATE_LIMIT=1000     

TRUST_PROXY=1

# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))" in the terminal
SESSION_SECRET=secret-key-you-gmust-enerate

# Number of bcrypt rounds 
BCRYPT_ROUNDS=12

# Session duration in days
SESSION_DURATION_DAYS=7

# Optional shared secret for telemetry 
API_KEY= your-api-key

AGGREGATOR_ENABLED=true

# How often to run aggregation
AGGREGATOR_INTERVAL=1h

AGGREGATOR_RUN_ON_STARTUP=true

NEXT_PUBLIC_INGESTION_URL=https://api.example.com

# Real-Time Anomaly Detection
REALTIME_ANOMALY_DEFAULT_WINDOW_HOURS=48
REALTIME_ANOMALY_MAX_WINDOW_HOURS=168
REALTIME_ANOMALY_MIN_REQUESTS=10
REALTIME_ANOMALY_CRITICAL_THRESHOLD=3.0
REALTIME_ANOMALY_WARNING_THRESHOLD=2.0
REALTIME_ANOMALY_MIN_DATA_POINTS=5
